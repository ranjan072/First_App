<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity"
   android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/round2"
                android:text="CONN"
                android:textColor="#C70039"
                android:textSize="@dimen/text_view"
                />

            <TextView
                android:id="@+id/app1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"


                android:background="@drawable/round3"
                android:text="EXION"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_view"
                />
        </LinearLayout>


        <Button
            android:id="@+id/face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="50dp"

            android:background="@drawable/round"
            android:drawableLeft="@drawable/fbnn"
            android:paddingLeft="15dp"
            android:text="Sign In With Facebook"
            android:textColor="#C70039"


            />

        <Button
            android:id="@+id/twit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round"
            android:drawableLeft="@drawable/twitter1"
            android:paddingLeft="15dp"
            android:text="Sign In With Twitter"
            android:textColor="#C70039" />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round"
            android:text="SignUp"
            android:textColor="#C70039" />

        <TextView
            android:id="@+id/register1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_marginTop="10dp"


            android:text="Already Exists? Sign In?"
            android:textColor="#3CAEA3" />

    </LinearLayout>
</LinearLayout>