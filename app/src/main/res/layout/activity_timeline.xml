<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_home"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="Name"

            android:textColor="#000000"
            android:textSize="40dp"
            />
        <TextView

            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"

            android:textColor="#000000"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"

                android:background="#5FB461"
                android:text="FOLLOW"
                android:textColor="#ffffff"
                android:textSize="30dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="50dp"


                android:background="#C70039"
                android:text="MESSAGE"
                android:textColor="#ffffff"
                android:textSize="30dp"
                />
        </LinearLayout>
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"


            android:drawableLeft="@drawable/ic_overview"

            android:text="Overview"
            android:textColor="#C70039" />
        <Button
            android:id="@+id/twit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"


            android:drawableLeft="@drawable/ic_account_setting"

            android:text="Account Setting"
            android:textColor="#C70039" />
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"


            android:drawableLeft="@drawable/ic_tasks"

            android:text="Tasks"
            android:textColor="#C70039" />
        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"


            android:drawableLeft="@drawable/ic_help"

            android:text="Help"
            android:textColor="#C70039" />
    </LinearLayout>

</LinearLayout>